# Variables de entorno para Mi Tienda (Vite + React)
# Copia este archivo como `.env` y completa los valores

# API principal (productos, carrito, órdenes)
VITE_API_BASE_URL=https://tu-instancia.xano.io/api:API_KEY_PRODUCTOS

# API de autenticación (login, registro)
VITE_AUTH_API_URL=https://tu-instancia.xano.io/api:API_KEY_AUTH

# API alternativa (servicios genéricos, si usas xanoAPI)
VITE_XANO_BASE_URL=https://tu-instancia.xano.io/api:TOKEN_BASE

# Subida de imágenes (config por defecto)
# Nombre del campo de archivo que espera Xano (común: "file")
VITE_UPLOAD_FILE_FIELD=file

# Endpoint opcional para subida múltiple (si lo tienes configurado).
# Déjalo vacío para usar el fallback de subidas individuales a /upload
VITE_UPLOAD_IMAGES_ENDPOINT=

# Subida directa de imágenes al endpoint de producto (multipart)
# Nombre de campo de archivo en el producto (común: "image")
VITE_PRODUCT_IMAGE_FIELD=image


